
 {{#each Articles}}
<div class='panel panel-default'><div class='panel-heading'><a target='_blank' class='article-link' href={{this.link}}><h3>{{this.title}}</h3></a>
<a class='btn btn-danger delete' data-id={{this._id}}>Delete From Saved</a><a class='btn btn-success notes' data-id={{this._id}}>Article Notes</a></div><div class='panel-body'><p>{{this.summary}}</p>
      </div></div>


{{/each}}



<div class="bootbox modal fade bootbox-alert in" tabindex="-1" role="dialog" id="notesModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true" style="margin-top: -10px;">Ã—</button>
        <div class="bootbox-body">
          <div class="container-fluid text-center">
            <h4 id="notesHeading"></h4>
            <hr>
            <ul class="list-group note-container" id="notesResult">
            </ul>
            <textarea placeholder="New Note" rows="4" cols="60" id="bodyinput" name="body"></textarea>
            <button class="btn btn-success save">Save Note</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

